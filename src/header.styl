@require"variables.styl";

.page-header
	display flex
	padding-top 40px
	min-height: 120px
	justify-content space-between
	@media screen and (max-width: $xsDevices)
		min-height: 80px
		justify-content flex-start
		padding $xsDevicesblockPadding $xsDevicesblockPadding 0 $xsDevicesblockPadding

.toggle-menu-btn
	display none
	font-size 
	@media screen and (max-width: $xsDevices)
		display: block
		margin-right 1rem

.logo-container
	flex 0 0 30%
	display flex
	flex-direction column
	justify-content center
	@media screen and (max-width: $xsDevices)
		justify-content: flex-start;

.logo
	width 50%
	max-width 110px
	> a
		color $textColor
		> svg
			> path
				fill $textColor

.logo-text-large > a
	display block
	height 18px

.logo-text-small
	padding-top 0.5rem
	font-size 1rem
	@media screen and (max-width: $xsDevices)
		display: none

.page-menu-container
	flex 0 0 40%
	display flex
	align-items center
	justify-content flex-end
	@media screen and (max-width: $xsDevices)
		position: absolute
		transform: translateX(-120%)

.page-menu
	display flex
	justify-content space-between

.page-menu-items
	display flex

.page-menu-items > a
	padding 1rem;
	color $textColor

.page-menu-items:last-child > a
	padding-right 0